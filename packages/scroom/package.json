{
    "name": "scroom",
    "version": "0.2.0",
    "description": "A smart library for cool scrolling effects, based on Intersection API.",
    "author": "myWsq <wsq961@outlook.com>",
    "license": "MIT",
    "homepage": "https://scroom-site.netlify.app",
    "repository": {
        "type": "git",
        "url": "https://github.com/myWsq/scroom.git"
    },
    "source": "main.ts",
    "types": "dist/main.d.ts",
    "main": "dist/scroom.js",
    "umd:main": "dist/scroom.umd.js",
    "module": "dist/scroom.m.js",
    "esmodule": "dist/scroom.modern.js",
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "scripts": {
        "dev": "microbundle watch",
        "build": "microbundle --name Scroom",
        "lint": "eslint . --cache --fix --ext .ts,.tsx",
        "format": "prettier --loglevel warn --write \"**/*.{ts,tsx,css,md}\""
    },
    "devDependencies": {
        "@types/randomcolor": "^0.5.5",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "eslint": "^7.14.0",
        "eslint-config-alloy": "^3.8.2",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.3",
        "microbundle": "^0.12.4",
        "prettier": "^2.2.1",
        "typescript": "^3.9.7"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": "eslint --cache --fix",
        "*.{ts,tsx,css,md}": "prettier --write"
    },
    "dependencies": {
        "randomcolor": "^0.6.2",
        "resize-observer-polyfill": "^1.5.1"
    }
}